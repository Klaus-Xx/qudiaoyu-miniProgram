/* pages/match/input/score/score.wxss */
page{
  background-color: #FFF;
  box-sizing: border-box;
  padding: 20rpx;
}
.main{
  padding: 20rpx;
  border: 1px solid #EEE;
  margin-top: 20rpx;
}
.title{
  padding:20rpx 0;
  text-align: center;
  position: relative;
  color: #3498db;
  font-size: 36rpx;
}
.title num{
  position: absolute;
  top: 20rpx;
  left: 0;
  bottom: 0;
  color: #000;
  font-size: 34rpx;
}
.item{
  display: flex;
  align-items: center;
  padding: 20rpx 0;
}
.middle{
  flex-grow: 1;
}
.middle image{
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
  border-radius: 40rpx;
}
.middle text{
  display: block;
  line-height: 40rpx;
  font-size: 30rpx;
  color: #999;
}
.item .left{
  padding: 0 20rpx;
  flex-grow: 1;
  text-align: center;
  font-size: 28rpx;
}
.item .right{
  padding-right: 20rpx;
  font-size: 30rpx;
  color: #999;
}



.top image{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
}
.top .label{
  background-color: rgba(255,0,0,0.7);
  display: block;
  padding: 6rpx 20rpx;
  font-size: 26rpx;
  position: absolute;
  left: 100rpx;
  transform: translateX(-50%);
  color: #fff;
}
.top{
  background-color:#FFF;
  padding-left: 200rpx;
  border-radius: 8rpx;
  border:1px solid #eee;
  position: relative;
  height: 200rpx;
  overflow: hidden;
}


.top .context{
  overflow: hidden;
  color: #666;
  padding: 20rpx;
}
.top .context .name{
  color: #3b8de3;
  font-size: 34rpx;
  margin-bottom: 10rpx;
}
.top .context view{
  font-size: 28rpx;
}

.tail{
  padding: 40rpx;
  font-size: 40rpx;
  color: red;
  text-align: center;
}



input{
  border: 1px solid #eee;
  padding: 10rpx;
  width: 160rpx;
  margin-right: 10rpx;
}
button{
  margin-top: 40rpx;
}

/* pages/fishingGroundDetails/payFishTicket/coupon/coupon.wxss */
.list{
  padding: 20rpx;
}
.list .on{
  opacity: 1;
}
.item{
  display: flex;
  border: 1px solid #97DDFF;
  color: #FFF;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}
.left{
  display: flex;
  padding: 0 20rpx;
  background-color: #97DDFF;
  font-size: 42rpx;
  align-items: center;
  width: 170rpx;
  flex-shrink:0;
  justify-content: center;
}
.right{
  padding : 20rpx;
}
.right text{
  display: block;
  font-size: 30rpx;
  color: #000;
  width: 100%;
  padding-bottom: 10rpx ;
}
.item .right text:last-child{
  padding-bottom: 0;
}

.unavailable{
  opacity: 0.3;
}